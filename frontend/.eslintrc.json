{
  "env": {
    "browser": true,
    "es2021": true,
    "serviceworker": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "script"
  },
  "rules": {
    "indent": ["error", 4],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": ["warn"],
    "no-console": ["warn"],
    "prefer-const": ["error"],
    "no-var": ["error"]
  },
  "globals": {
    "fetch": "readonly",
    "navigator": "readonly",
    "document": "readonly",
    "window": "readonly",
    "console": "readonly",
    "addEventListener": "readonly",
    "removeEventListener": "readonly"
  },
  "ignorePatterns": [
    "node_modules/",
    "*.min.js"
  ]
}
